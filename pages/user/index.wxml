<!--pages/user/index.wxml-->
<view class="page">
  <view class="page__bd">
    <view class="weui-cells__title">用户信息</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell">
        <view class="weui-cell__bd">昵称</view>
        <view class="weui-cell__ft"><open-data type="userNickName" lang="zh_CN"></open-data></view>
      </view>
      <view class="weui-cell">
        <view class="weui-cell__bd">性别</view>
        <view class="weui-cell__ft" wx:if="{{user.gender==0}}">女</view>
        <view class="weui-cell__ft" wx:else><open-data type="userGender" lang="zh_CN"></open-data></view>
      </view>
      <view class="weui-cell">
        <view class="weui-cell__bd">省份</view>
        <view class="weui-cell__ft"><open-data type="userProvince" lang="zh_CN"></open-data></view>
      </view>
      <view class="weui-cell">
        <view class="weui-cell__bd">城市</view>
        <view class="weui-cell__ft"><open-data type="userCity" lang="zh_CN"></open-data></view>
      </view>
      <view class="weui-cell">
        <view class="weui-cell__bd">
          <image src="/img/like.jpg" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;">
          </image>
        </view>
        <!-- <view class="weui-cell__bd">被赞</view> -->
        <view class="weui-cell__ft">{{user.likeNum}}</view>
      </view>
      <view class="weui-cell">
        <view class="weui-cell__bd">
          <image class="flipy" src="/img/like.jpg" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;">
          </image>
        </view>
        <!-- <view class="weui-cell__bd">被踩</view> -->
        <view class="weui-cell__ft">{{user.treadNum}}</view>
      </view>
      <view class="weui-cell">
        <view class="weui-cell__bd">标签</view>
        <view class="weui-cell__ft">{{user.labels}}</view>
      </view>
    </view>
  </view>
  <view class="page__bd page__bd_spacing">
    <button class="weui-btn" type="primary" bindtap="likeUser" disabled="{{hasAttitude}}">为他点赞</button>
  </view>
  <view class="page__bd page__bd_spacing">
    <button class="weui-btn" type="warn" bindtap="threadUser" disabled="{{hasAttitude}}">踩他一脚</button>
  </view>
</view>